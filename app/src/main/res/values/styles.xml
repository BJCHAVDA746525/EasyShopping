<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="filter_heading_txt">
        <item name="android:textColor">@color/home_title_txt_color</item>
        <item name="android:textSize">@dimen/_15sdp</item>
        <item name="android:fontFamily">@font/nunito_bold</item>
    </style>


    <style name="filter_minmax_txt">
        <item name="android:textColor">@color/home_title_txt_color</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:background">@drawable/card_txt_bg</item>
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="android:padding">@dimen/_5sdp</item>
    </style>

    <style name="type_btn_style">
        <item name="android:textColor">@color/home_title_txt_color</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="android:background">@drawable/card_txt_bg</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_margin">@dimen/_5sdp</item>
    </style>

    <!-- Custom RangeSlider label style -->
    <style name="CustomRangeSliderLabel" parent="Widget.MaterialComponents.Slider">
        <!-- Change the text color of the value label -->
        <item name="android:textColor">@color/colorAccent</item>

    </style>

    <style name="btn_style" >
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="android:background">@drawable/product_btn_bg</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_margin">@dimen/_5sdp</item>
    </style>


</resources>