<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/order_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/fragment_bg">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/payment_address_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_5sdp"
        android:elevation="@dimen/_10sdp"
        android:innerRadius="0dp"
        android:shape="ring"
        android:thicknessRatio="1.9"
        app:cardCornerRadius="@dimen/_7sdp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp">


            <!--Date Section-->
            <LinearLayout
                android:id="@+id/date_section"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/year_order_txt"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito_regular"
                    android:gravity="center"
                    android:text="2024"
                    android:textColor="@color/changeDPColor"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:id="@+id/date_order_txt"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito_bold"
                    android:gravity="center"
                    android:text="05"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/_15sdp"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/month_order_txt"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito_regular"
                    android:gravity="center"
                    android:text="DEC"
                    android:textColor="@color/light_greytext"
                    android:textSize="@dimen/_12sdp" />

            </LinearLayout>

            <!--OrderName Section-->
            <LinearLayout
                android:id="@+id/orderNameSection"
                android:layout_width="@dimen/_170sdp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_toEndOf="@id/date_section"
                android:orientation="horizontal"
                android:weightSum="3.00">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.00"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/orderno_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito_regular"
                        android:text="order No "
                        android:textColor="@color/changeDPColor"
                        android:textSize="@dimen/_12sdp" />


                    <TextView
                        android:id="@+id/name_order_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito_regular"
                        android:text="Total"
                        android:textColor="@color/changeDPColor"
                        android:textSize="@dimen/_12sdp" />

                    <TextView
                        android:id="@+id/total_products_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito_regular"
                        android:text="Total Products : "
                        android:textColor="@color/changeDPColor"
                        android:textSize="@dimen/_12sdp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.00"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/orderno_order_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito_bold"
                        android:text="#1234"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/_12sdp" />

                    <TextView
                        android:id="@+id/total_cost_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito_bold"
                        android:text="$50000"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/_12sdp" />

                    <TextView
                        android:id="@+id/total_products_details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito_bold"
                        android:text="2"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/_12sdp" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/Status_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:fontFamily="@font/nunito_bold"
                android:text="On the Way"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/_12sdp" />


        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>


</RelativeLayout>