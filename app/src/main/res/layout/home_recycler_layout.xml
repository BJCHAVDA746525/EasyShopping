<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/product_rv_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/fragment_bg"
    android:padding="@dimen/_3sdp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_3sdp">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/_5sdp"
            app:cardElevation="@dimen/_2sdp">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <RelativeLayout
                    android:id="@+id/home_rv_layout_img_section"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/home_rv_imgview"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_100sdp"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_launcher_background" />

                    <ImageView
                        android:id="@+id/shopping_bag_home"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_alignBottom="@id/home_rv_imgview"
                        android:layout_alignParentEnd="true"
                        android:layout_margin="@dimen/_10sdp"
                        android:background="@drawable/round_bag_bg"
                        android:padding="@dimen/_5sdp"
                        android:src="@drawable/shopping_bag" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/home_rv_text_section"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/home_rv_layout_img_section"
                    android:layout_margin="@dimen/_5sdp"
                    android:padding="@dimen/_5sdp">

                    <TextView
                        android:id="@+id/product_rv_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito_bold"
                        android:maxLines="1"
                        android:text="Comfortable chair"
                        android:textColor="@color/product_rv_color"
                        android:textSize="@dimen/_12sdp" />

                    <TextView
                        android:id="@+id/catagory_rv_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/product_rv_txt"
                        android:fontFamily="@font/nunito_regular"
                        android:maxLines="1"
                        android:text="Living Room"
                        android:textColor="@color/catagory_rv_color"
                        android:textSize="@dimen/_10sdp" />

                    <TextView
                        android:id="@+id/Price_rv_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/catagory_rv_txt"
                        android:fontFamily="@font/nunito_bold"
                        android:maxLines="1"
                        android:text="Rs. 5999.99 "
                        android:textColor="@color/price_rv_color"
                        android:textSize="@dimen/_12sdp" />

                    <TextView
                        android:id="@+id/rating_rv_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/Price_rv_txt"
                        android:layout_toLeftOf="@id/star_rating"
                        android:fontFamily="@font/nunito_regular"
                        android:maxLines="1"
                        android:paddingHorizontal="@dimen/_8sdp"
                        android:text="4.3"
                        android:textColor="@color/catagory_rv_color"
                        android:textSize="@dimen/_10sdp" />

                    <ImageView
                        android:id="@+id/star_rating"
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:layout_alignBottom="@id/Price_rv_txt"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/star_rating" />


                </RelativeLayout>

            </RelativeLayout>


        </androidx.cardview.widget.CardView>
    </RelativeLayout>

</RelativeLayout>