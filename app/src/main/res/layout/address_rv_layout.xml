<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/Address_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/fragment_bg">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/payment_address_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_5sdp"
        android:elevation="@dimen/_10sdp"
        android:innerRadius="0dp"
        android:shape="ring"
        android:thicknessRatio="1.9"
        app:cardCornerRadius="@dimen/_7sdp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp">

            <ImageView
                android:id="@+id/add_select_rv"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/check_select" />

            <TextView
                android:id="@+id/add_rv_add_line1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_bold"
                android:maxLines="1"
                android:text="Address line 1"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/add_rv_add_line2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/add_rv_add_line1"
                android:fontFamily="@font/nunito_bold"
                android:maxLines="1"
                android:text="Address line 2"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/add_rv_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/add_rv_add_line2"
                android:fontFamily="@font/nunito_bold"
                android:maxLines="1"
                android:text="City"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/add_rv_pincode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/add_rv_city"
                android:fontFamily="@font/nunito_bold"
                android:inputType="number"
                android:maxLines="1"
                android:text="PinCode"
                android:textSize="@dimen/_12sdp" />


        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>